# Базовые настройки
DEBUG=false
PROJECT_NAME="Review Analysis System"
PROJECT_VERSION="1.0.0"

# База данных PostgreSQL
DATABASE_URL=postgresql+asyncpg://review_user:review_password@postgres:5432/reviews
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# NLP настройки
USE_TRANSFORMERS=true
FALLBACK_TO_TEXTBLOB=true
SENTIMENT_THRESHOLD_POSITIVE=0.6
SENTIMENT_THRESHOLD_NEGATIVE=0.4
RUSSIAN_MODEL_PATH=DeepPavlov/rubert-base-cased-sentiment
ENGLISH_MODEL_PATH=cardiffnlp/twitter-roberta-base-sentiment

# API настройки
API_RATE_LIMIT=100
API_TIMEOUT=120
CORS_ORIGINS=["*"]

# Секретные ключи (для продакшена замените!)
SECRET_KEY=your-secret-key-change-in-production